<odoo>
    <record id="view_event_result_tree" model="ir.ui.view">
        <field name="name">event.result.list</field>
        <field name="model">event.result</field>
        <field name="arch" type="xml">
            <list>
                <field name="program_id"/>
                <field name="participant_id"/>
                <field name="score"/>
                <field name="position"/>
                <field name="remarks"/>
            </list>
        </field>
    </record>

    <record id="view_event_result_form" model="ir.ui.view">
        <field name="name">event.result.form</field>
        <field name="model">event.result</field>
        <field name="arch" type="xml">
            <form string="Result">
                <sheet>
                    <group>
                        <field name="program_id"/>
                        <field name="participant_id"/>
                        <field name="score"/>
                        <field name="position"/>
                        <field name="remarks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_event_result" model="ir.actions.act_window">
        <field name="name">Results</field>
        <field name="res_model">event.result</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_event_results" 
              name="Results" 
              parent="menu_event_main_root" 
              action="action_event_result" 
              sequence="30"/>
</odoo>
