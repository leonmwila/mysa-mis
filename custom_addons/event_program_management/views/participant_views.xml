<odoo>
    <record id="view_event_participant_tree" model="ir.ui.view">
        <field name="name">event.participant.list</field>
        <field name="model">event.participant</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="program_id"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="province"/>
                <field name="attended"/>
            </list>
        </field>
    </record>

    <record id="view_event_participant_form" model="ir.ui.view">
        <field name="name">event.participant.form</field>
        <field name="model">event.participant</field>
        <field name="arch" type="xml">
            <form string="Participant">
                <sheet>
                    <group>
                        <group string="Participant Details">
                            <field name="name"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="contact"/>
                        </group>
                    </group>
                    <group>
                        <group string="Location Information">
                            <field name="province"/>
                            <field name="address"/>
                        </group>
                        <group string="Event Information">
                            <field name="program_id"/>
                            <field name="attended"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_event_participant" model="ir.actions.act_window">
        <field name="name">Participants</field>
        <field name="res_model">event.participant</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_event_participants" 
              name="Participants" 
              parent="menu_event_main_root" 
              action="action_event_participant" 
              sequence="20"/>
</odoo>
