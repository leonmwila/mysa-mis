<odoo>
    <record id="view_user_profile_tree" model="ir.ui.view">
        <field name="name">user.profile.list</field>
        <field name="model">user.profile</field>
        <field name="arch" type="xml">
            <list string="User Profiles">
                <field name="user_id"/>
                <field name="national_id"/>
                <field name="phone"/>
                <field name="department"/>
                <field name="council"/>
                <field name="role"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="view_user_profile_form" model="ir.ui.view">
        <field name="name">user.profile.form</field>
        <field name="model">user.profile</field>
        <field name="arch" type="xml">
            <form string="User Profile">
                <sheet>
                    <group>
                        <field name="user_id"/>
                        <field name="national_id"/>
                        <field name="phone"/>
                        <field name="department"/>
                        <field name="council"/>
                        <field name="role"/>
                        <field name="achievements"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu and Action -->
    <record id="action_user_profile" model="ir.actions.act_window">
        <field name="name">User Profiles</field>
        <field name="res_model">user.profile</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_user_management_root"
              name="User Management"
              sequence="1"/>

    <menuitem id="menu_user_profiles"
              name="Profiles"
              parent="menu_user_management_root"
              action="action_user_profile"
              sequence="2"/>
</odoo>
