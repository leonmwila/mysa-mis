<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Application Form View -->
    <record id="view_application_form" model="ir.ui.view">
        <field name="name">youth.application.form</field>
        <field name="model">youth.application</field>
        <field name="arch" type="xml">
            <form string="Youth Application">
                <header>
                    <button name="action_submit_application" type="object" string="Submit" 
                           class="btn-primary" invisible="status != 'draft'"/>
                    <button name="action_start_review" type="object" string="PYDC Review" 
                           class="btn-info" invisible="status != 'submitted'" groups="youth_tracking.group_youth_pydc"/>
                    <button name="action_pydc_approve" type="object" string="PYDC Approve" 
                           class="btn-success" invisible="status != 'under_review'" groups="youth_tracking.group_youth_pydc"/>
                    <button name="action_reject_application" type="object" string="PYDC Reject" 
                           class="btn-warning" invisible="status != 'under_review'" groups="youth_tracking.group_youth_pydc"/>
                    <button name="action_committee_approve" type="object" string="Committee Approve" 
                           class="btn-success" invisible="status != 'committee_review'" groups="youth_tracking.group_youth_director"/>
                    <button name="action_reject_application" type="object" string="Committee Reject" 
                           class="btn-warning" invisible="status != 'committee_review'" groups="youth_tracking.group_youth_director"/>
                    <button name="action_director_approve" type="object" string="Director Approve" 
                           class="btn-success" invisible="status != 'approved'" groups="youth_tracking.group_youth_director"/>
                    <button name="action_reject_application" type="object" string="Director Reject" 
                           class="btn-warning" invisible="status != 'approved'" groups="youth_tracking.group_youth_director"/>
                    <button name="action_final_approve" type="object" string="Final Approve" 
                           class="btn-success" invisible="status != 'approved'" groups="youth_tracking.group_youth_admin"/>
                    <button name="action_disburse_funds" type="object" string="Disburse Funding" 
                           class="btn-primary" invisible="status != 'approved'" groups="youth_tracking.group_youth_admin"/>
                    <field name="status" widget="statusbar" 
                           statusbar_visible="draft,submitted,under_review,under_review,approved,disbursed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_attachments" type="object" 
                                class="oe_stat_button" icon="fa-file">
                            <field name="attachments_count" widget="statbutton" string="Documents"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <div class="o_row">
                            <field name="application_type" required="1" readonly="status != 'draft'"/>
                        </div>
                    </div>

                    <group>
                        <group name="applicant_info" string="Applicant Information">
                            <field name="youth_id" required="1" readonly="status != 'draft'" 
                                   options="{'no_create': True}"/>
                            <field name="program_id" readonly="status != 'draft'" 
                                   options="{'no_create': True}"/>
                            <field name="application_date" readonly="1"/>
                            <field name="priority"/>
                        </group>
                        <group name="financial_info" string="Financial Details">
                            <field name="requested_amount" required="1" readonly="status != 'draft'" 
                                   widget="monetary"/>
                            <field name="approved_amount" readonly="1" widget="monetary"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Application Details" name="details">
                            <group>
                                <field name="name" string="Project/Business Title" 
                                       readonly="status != 'draft'" required="1"/>
                                <field name="description" string="Description" 
                                       readonly="status != 'draft'" required="1" nolabel="1"/>
                            </group>
                        </page>

                        <page string="Approval Workflow" name="approval">
                            <group>
                                <group string="PYDC Review">
                                    <field name="reviewer_id" readonly="1"/>
                                    <field name="pydc_approval_date" readonly="1"/>
                                    <field name="review_notes" readonly="1"/>
                                </group>
                                <group string="Committee Review">
                                    <field name="reviewer_id" readonly="1"/>
                                    <field name="pydc_approval_date" readonly="1"/>
                                    <field name="review_notes" readonly="1"/>
                                </group>
                            </group>
                            <group>
                                <group string="Director Review">
                                    <field name="reviewer_id" readonly="1"/>
                                    <field name="pydc_approval_date" readonly="1"/>
                                    <field name="review_notes" readonly="1"/>
                                </group>
                                <group string="Final Approval">
                                    <field name="final_approver_id" readonly="1"/>
                                    <field name="final_approval_date" readonly="1"/>
                                    <field name="rejection_reason" readonly="1" 
                                           invisible="status not in ['rejected', 'rejected', 'rejected', 'rejected']"/>
                                </group>
                            </group>
                        </page>

                        <page string="Disbursement" name="disbursement" invisible="status not in ['approved', 'disbursed']">
                            <group>
                                <group>
                                    <field name="disbursement_date" readonly="status == 'disbursed'"/>
                                    <field name="disbursed_by_id" readonly="1"/>
                                </group>
                                <group>
                                </group>
                            </group>
                        </page>


                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Application Tree View -->
    <record id="view_application_tree" model="ir.ui.view">
        <field name="name">youth.application.tree</field>
        <field name="model">youth.application</field>
        <field name="arch" type="xml">
            <list string="Youth Applications" decoration-info="status == 'submitted'" 
                  decoration-warning="status in ['under_review', 'under_review', 'under_review']"
                  decoration-success="status in ['approved', 'disbursed']"
                  decoration-danger="status in ['rejected', 'rejected', 'rejected', 'rejected']">
                <field name="name"/>
                <field name="youth_id"/>
                <field name="program_id" optional="show"/>
                <field name="application_type"/>
                <field name="requested_amount" widget="monetary"/>
                <field name="approved_amount" widget="monetary"/>
                <field name="application_date"/>
                <field name="priority"/>
                <field name="status" widget="badge" 
                       decoration-info="status == 'submitted'"
                       decoration-warning="status in ['under_review', 'under_review', 'under_review']"
                       decoration-success="status in ['approved', 'disbursed']"
                       decoration-danger="status in ['rejected', 'rejected', 'rejected', 'rejected']"/>
            </list>
        </field>
    </record>

    <!-- Application Kanban View -->
    <record id="view_application_kanban" model="ir.ui.view">
        <field name="name">youth.application.kanban</field>
        <field name="model">youth.application</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" class="o_kanban_small_column">
                <field name="name"/>
                <field name="youth_id"/>
                <field name="application_type"/>
                <field name="requested_amount"/>
                <field name="priority"/>
                <field name="status"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="youth_id"/>
                                        </div>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                        <a class="dropdown-toggle o-no-caret btn" data-toggle="dropdown" href="#" role="button" aria-label="Dropdown menu" title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a name="action_submit_application" type="object" class="dropdown-item" t-if="record.status.raw_value == 'draft'">Submit</a>
                                            <a name="action_pydc_approve" type="object" class="dropdown-item" t-if="record.status.raw_value == 'under_review'" groups="youth_tracking.group_youth_pydc">PYDC Approve</a>
                                            <div class="dropdown-divider"/>
                                            <a name="edit" type="edit" class="dropdown-item">Edit</a>
                                            <a name="delete" type="delete" class="dropdown-item">Delete</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="application_type"/>
                                    <br/>
                                    <strong>Amount: </strong><field name="requested_amount" widget="monetary"/>
                                    <br/>
                                    <span class="badge badge-pill" t-attf-class="badge-{{record.priority.raw_value == 'high' and 'danger' or record.priority.raw_value == 'medium' and 'warning' or 'secondary'}}">
                                        <field name="priority"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Application Search View -->
    <record id="view_application_search" model="ir.ui.view">
        <field name="name">youth.application.search</field>
        <field name="model">youth.application</field>
        <field name="arch" type="xml">
            <search string="Search Applications">
                <field name="name"/>
                <field name="youth_id"/>
                <field name="application_type"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('status', '=', 'submitted')]"/>
                <filter string="Under Review" name="under_review" domain="[('status', 'in', ['under_review', 'under_review', 'under_review'])]"/>
                <filter string="Approved" name="approved" domain="[('status', '=', 'approved')]"/>
                <filter string="Disbursed" name="disbursed" domain="[('status', '=', 'disbursed')]"/>
                <filter string="Rejected" name="rejected" domain="[('status', 'in', ['rejected', 'rejected', 'rejected', 'rejected'])]"/>
                <separator/>
                <filter string="High Priority" name="high_priority" domain="[('priority', '=', 'high')]"/>
                <filter string="CDF Applications" name="cdf" domain="[('application_type', '=', 'cdf')]"/>
            </search>
        </field>
    </record>

    <!-- Application Action -->
    <record id="action_application" model="ir.actions.act_window">
        <field name="name">Youth Applications</field>
        <field name="res_model">youth.application</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first youth application
            </p>
            <p>
                Applications help track CDF funding and other youth program requests through the approval workflow.
            </p>
        </field>
    </record>

</odoo>