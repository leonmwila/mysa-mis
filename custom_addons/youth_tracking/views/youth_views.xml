<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Youth Form View -->
    <record id="view_youth_form" model="ir.ui.view">
        <field name="name">youth.youth.form</field>
        <field name="model">youth.youth</field>
        <field name="arch" type="xml">
            <form string="Youth Profile">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="active,inactive"/>
                </header>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Full Name" required="1"/>
                        </h1>
                        <div class="o_row">
                            <field name="nrc_number" placeholder="NRC Number"/>
                        </div>
                    </div>

                    <group>
                        <group name="personal_info" string="Personal Information">
                            <field name="gender"/>
                            <field name="date_of_birth"/>
                            <field name="age" readonly="1"/>
                            <field name="phone"/>
                            <field name="email" widget="email"/>
                        </group>
                        <group name="location_info" string="Location &amp; Zone">
                            <field name="zone_id" options="{'no_create': False}"/>
                            <field name="address"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Education &amp; Employment" name="education_employment">
                            <group>
                                <group string="Education">
                                    <field name="education_level"/>
                                    <field name="current_institution"/>
                                    <field name="grade_year"/>
                                    <field name="graduation_date"/>
                                </group>
                                <group string="Employment">
                                    <field name="employment_status"/>
                                </group>
                            </group>
                        </page>

                        <page string="Skills &amp; Interests" name="skills">
                            <group>
                                <field name="skills_interests"/>
                                <field name="career_aspirations"/>
                            </group>
                        </page>

                        <page string="Emergency Contact" name="emergency">
                            <group>
                                <field name="emergency_contact"/>
                                <field name="emergency_phone"/>
                            </group>
                        </page>

                        <page string="Programs &amp; Activities" name="programs">
                            <field name="program_ids"/>
                        </page>

                        <page string="Applications" name="applications">
                            <group>
                                <field name="total_applications" readonly="1"/>
                                <field name="approved_applications" readonly="1"/>
                                <field name="application_success_rate" readonly="1"/>
                            </group>
                        </page>

                        <page string="Notes" name="notes">
                            <field name="notes" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Youth Tree View -->
    <record id="view_youth_tree" model="ir.ui.view">
        <field name="name">youth.youth.tree</field>
        <field name="model">youth.youth</field>
        <field name="arch" type="xml">
            <list string="Youth" decoration-muted="status == 'inactive'">
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="zone_id"/>
                <field name="education_level"/>
                <field name="employment_status"/>
                <field name="active_programs"/>
                <field name="total_applications"/>
                <field name="status" widget="badge" decoration-success="status == 'active'" decoration-muted="status == 'inactive'"/>
                <field name="registration_date"/>
            </list>
        </field>
    </record>

    <!-- Youth Kanban View -->
    <record id="view_youth_kanban" model="ir.ui.view">
        <field name="name">youth.youth.kanban</field>
        <field name="model">youth.youth</field>
        <field name="arch" type="xml">
            <kanban create="true" quick_create="false">
                <field name="id"/>
                <field name="name"/>
                <field name="age"/>
                <field name="zone_id"/>
                <field name="status"/>
                <field name="active_programs"/>
                <field name="total_applications"/>
                <field name="image"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="record.image.value ? '/web/image/youth.youth/' + record.id.raw_value + '/image/128x128' : '/web/static/img/placeholder.png'" alt="Youth"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="age"/> years â€¢ <field name="zone_id"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-secondary" t-if="record.active_programs.raw_value">
                                            <i class="fa fa-graduation-cap"/> <t t-esc="record.active_programs.value"/> Programs
                                        </span>
                                        <span class="badge badge-info" t-if="record.total_applications.raw_value">
                                            <i class="fa fa-file-text"/> <t t-esc="record.total_applications.value"/> Applications
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="badge badge-success" t-if="record.status.raw_value == 'active'">Active</span>
                                        <span class="badge badge-secondary" t-if="record.status.raw_value == 'inactive'">Inactive</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Youth Search View -->
    <record id="view_youth_search" model="ir.ui.view">
        <field name="name">youth.youth.search</field>
        <field name="model">youth.youth</field>
        <field name="arch" type="xml">
            <search string="Search Youth">
                <field name="name"/>
                <field name="nrc_number"/>
                <field name="zone_id"/>
                <separator/>
                <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                <filter string="Inactive" name="inactive" domain="[('status', '=', 'inactive')]"/>
                <separator/>
                <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                <separator/>
                <filter string="Unemployed" name="unemployed" domain="[('employment_status', '=', 'unemployed')]"/>
                <filter string="Students" name="students" domain="[('employment_status', '=', 'student')]"/>
                <filter string="Employed" name="employed" domain="[('employment_status', 'in', ['employed', 'self_employed'])]"/>
                <separator/>
                <filter string="18-25 Years" name="age_18_25" domain="[('age', '&gt;=', 18), ('age', '&lt;=', 25)]"/>
                <filter string="26-30 Years" name="age_26_30" domain="[('age', '&gt;=', 26), ('age', '&lt;=', 30)]"/>
                <filter string="31-35 Years" name="age_31_35" domain="[('age', '&gt;=', 31), ('age', '&lt;=', 35)]"/>
            </search>
        </field>
    </record>

    <!-- Youth Action -->
    <record id="action_youth" model="ir.actions.act_window">
        <field name="name">Youth</field>
        <field name="res_model">youth.youth</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first youth profile
            </p>
            <p>
                Register youth in the system to track their programs, applications, and achievements.
            </p>
        </field>
    </record>

</odoo>