<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Performance Metric Form View -->
    <record id="view_artist_performance_metric_form" model="ir.ui.view">
        <field name="name">artist.performance.metric.form</field>
        <field name="model">artist.performance.metric</field>
        <field name="arch" type="xml">
            <form string="Artist Performance">
                <header>
                    <button name="action_mark_completed" type="object" string="Mark Completed" 
                           class="btn-primary" invisible="status == 'completed'"/>
                    <field name="status" widget="statusbar" statusbar_visible="planned,confirmed,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Performance Title" required="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="artist_id" required="1"/>
                            <field name="art_category" readonly="1"/>
                            <field name="performance_type" required="1"/>
                            <field name="performance_date" required="1"/>
                            <field name="performance_time"/>
                        </group>
                        
                        <group name="venue_info" string="Venue Information">
                            <field name="venue_name"/>
                            <field name="venue_address"/>
                            <field name="is_public_performance"/>
                            <field name="audience_type"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="audience_info" string="Audience">
                            <field name="expected_audience"/>
                            <field name="actual_audience"/>
                        </group>
                        
                        <group name="rating_info" string="Rating">
                            <field name="self_rating"/>
                            <field name="overall_rating" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Describe the performance..." nolabel="1"/>
                        </page>
                        
                        <page string="Assessment" name="assessment">
                            <group>
                                <group string="Ratings">
                                    <field name="peer_rating"/>
                                    <field name="instructor_rating"/>
                                    <field name="audience_rating"/>
                                </group>
                                <group string="Skills">
                                    <field name="technical_skills"/>
                                    <field name="creativity"/>
                                    <field name="stage_presence"/>
                                </group>
                            </group>
                            <group>
                                <field name="skills_demonstrated" placeholder="Skills demonstrated during performance..."/>
                                <field name="areas_for_improvement" placeholder="Areas to work on..."/>
                            </group>
                        </page>
                        
                        <page string="Collaboration" name="collaboration" invisible="not is_group_performance">
                            <group>
                                <field name="is_group_performance"/>
                                <field name="collaborators" invisible="not is_group_performance"/>
                                <field name="leadership_role" invisible="not is_group_performance"/>
                                <field name="teamwork_rating" invisible="not is_group_performance"/>
                            </group>
                        </page>
                        
                        <page string="Notes" name="notes">
                            <group>
                                <field name="notes" nolabel="1" placeholder="Additional notes..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Performance Metric Tree View -->
    <record id="view_artist_performance_metric_tree" model="ir.ui.view">
        <field name="name">artist.performance.metric.tree</field>
        <field name="model">artist.performance.metric</field>
        <field name="arch" type="xml">
            <list string="Artist Performances" create="1" edit="1" delete="1">
                <field name="name"/>
                <field name="artist_id"/>
                <field name="performance_type"/>
                <field name="performance_date"/>
                <field name="overall_rating"/>
                <field name="status" widget="badge" decoration-success="status == 'completed'" decoration-info="status == 'confirmed'"/>
            </list>
        </field>
    </record>

    <!-- Performance Metric Kanban View -->
    <record id="view_artist_performance_metric_kanban" model="ir.ui.view">
        <field name="name">artist.performance.metric.kanban</field>
        <field name="model">artist.performance.metric</field>
        <field name="arch" type="xml">
            <kanban create="1" edit="1" delete="1">
                <field name="id"/>
                <field name="name"/>
                <field name="artist_id"/>
                <field name="performance_type"/>
                <field name="performance_date"/>
                <field name="overall_rating"/>
                <field name="status"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="artist_id"/> • <field name="performance_type"/>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="performance_date"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge badge-warning" t-if="record.overall_rating.raw_value > 0">
                                            ⭐ <t t-esc="record.overall_rating.value"/> / 5.0
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="badge badge-success" t-if="record.status.raw_value == 'completed'">Completed</span>
                                        <span class="badge badge-info" t-if="record.status.raw_value == 'confirmed'">Confirmed</span>
                                        <span class="badge badge-secondary" t-if="record.status.raw_value == 'planned'">Planned</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
