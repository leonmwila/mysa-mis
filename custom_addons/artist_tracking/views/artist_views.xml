<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Artist Tree View -->
    <record id="view_artist_tree" model="ir.ui.view">
        <field name="name">artist.artist.tree</field>
        <field name="model">artist.artist</field>
        <field name="arch" type="xml">
            <list string="Artists" decoration-muted="status != 'active'">
                <field name="artist_id"/>
                <field name="name"/>
                <field name="stage_name"/>
                <field name="art_category"/>
                <field name="skill_level"/>
                <field name="zone_id"/>
                <field name="status"/>
                <field name="total_performances"/>
                <field name="total_achievements"/>
                <field name="overall_rating" widget="float"/>
                <field name="registration_date"/>
                <field name="phone"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <!-- Artist Form View -->
    <record id="view_artist_form" model="ir.ui.view">
        <field name="name">artist.artist.form</field>
        <field name="model">artist.artist</field>
        <field name="arch" type="xml">
            <form string="Artist">
                <header>
                    <button name="action_view_performances" type="object" string="View Performances" class="oe_highlight"/>
                    <button name="action_view_achievements" type="object" string="View Achievements" class="oe_highlight"/>
                    <field name="status" widget="statusbar" statusbar_visible="active,inactive,suspended,retired"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_performances" type="object" class="oe_stat_button" icon="fa-star">
                            <field name="total_performances" widget="statinfo" string="Performances"/>
                        </button>
                        <button name="action_view_achievements" type="object" class="oe_stat_button" icon="fa-trophy">
                            <field name="total_achievements" widget="statinfo" string="Achievements"/>
                        </button>
                    </div>
                    
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Artist Full Name"/>
                        </h1>
                        <h3>
                            <field name="stage_name" placeholder="Stage/Professional Name"/>
                        </h3>
                        <div>
                            <field name="artist_id" readonly="1"/>
                        </div>
                    </div>

                    <notebook>
                        <page string="Basic Information">
                            <group>
                                <group string="Personal Details">
                                    <field name="date_of_birth"/>
                                    <field name="age" readonly="1"/>
                                    <field name="gender"/>
                                    <field name="registration_date"/>
                                </group>
                                <group string="Contact Information">
                                    <field name="phone"/>
                                    <field name="email" widget="email"/>
                                    <field name="address"/>
                                    <field name="emergency_contact"/>
                                    <field name="emergency_phone"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Artistic Information">
                            <group>
                                <group string="Art Category &amp; Skills">
                                    <field name="art_category"/>
                                    <field name="specialization" widget="many2many_tags"/>
                                    <field name="skill_level"/>
                                    <field name="years_of_experience"/>
                                    <field name="is_professional"/>
                                </group>
                                <group string="Professional Details">
                                    <field name="mentor_id"/>
                                    <field name="portfolio_url" widget="url"/>
                                    <field name="overall_rating" widget="float" readonly="1"/>
                                    <field name="last_performance_date" readonly="1"/>
                                </group>
                            </group>
                            <group string="Description">
                                <field name="artistic_style" colspan="2" nolabel="1"/>
                            </group>
                            <group string="Education &amp; Certifications">
                                <field name="education_background" colspan="2" nolabel="1"/>
                                <field name="certifications" colspan="2" nolabel="1"/>
                            </group>
                        </page>
                        
                        <page string="Organization &amp; Location">
                            <group>
                                <group string="Zone &amp; Associations">
                                    <field name="zone_id"/>
                                    <field name="association_ids" widget="many2many_tags"/>
                                </group>
                                <group string="Mentorship">
                                    <field name="mentee_ids" widget="many2many_tags"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Financial Information">
                            <group>
                                <group string="Banking Details">
                                    <field name="bank_account"/>
                                    <field name="bank_name"/>
                                    <field name="tax_id"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Performances">
                            <field name="performance_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="performance_type"/>
                                    <field name="performance_date"/>
                                    <field name="venue_name"/>
                                    <field name="overall_rating"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Achievements">
                            <field name="achievement_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="achievement_type"/>
                                    <field name="achievement_level"/>
                                    <field name="achievement_date"/>
                                    <field name="position"/>
                                    <field name="verification_status"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Documents">
                            <field name="document_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="create_date"/>
                                    <field name="mimetype"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Artist Kanban View -->
    <record id="view_artist_kanban" model="ir.ui.view">
        <field name="name">artist.artist.kanban</field>
        <field name="model">artist.artist</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="id"/>
                <field name="name"/>
                <field name="stage_name"/>
                <field name="art_category"/>
                <field name="status"/>
                <field name="image"/>
                <field name="overall_rating"/>
                <field name="total_performances"/>
                <field name="total_achievements"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="'/web/image/artist.artist/' + record.id.raw_value + '/image'" alt="Artist" class="o_kanban_image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div t-if="record.stage_name.value">
                                    <i><field name="stage_name"/></i>
                                </div>
                                <div>
                                    <span class="badge badge-pill badge-info">
                                        <field name="art_category"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="o_priority_star fa fa-star-o" title="Rating">
                                            <field name="overall_rating"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span class="badge badge-success" t-if="record.status.raw_value == 'active'">Active</span>
                                        <span class="badge badge-warning" t-if="record.status.raw_value == 'inactive'">Inactive</span>
                                        <span class="badge badge-danger" t-if="record.status.raw_value == 'suspended'">Suspended</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Artist Search View -->
    <record id="view_artist_search" model="ir.ui.view">
        <field name="name">artist.artist.search</field>
        <field name="model">artist.artist</field>
        <field name="arch" type="xml">
            <search string="Artists">
                <field name="name"/>
                <field name="stage_name"/>
                <field name="artist_id"/>
                <field name="art_category"/>
                <field name="zone_id"/>
                
                <filter name="active_artists" string="Active Artists" domain="[('status', '=', 'active')]"/>
                <filter name="professional_artists" string="Professional Artists" domain="[('is_professional', '=', True)]"/>
                
                <separator/>
                <filter name="dance" string="Dance" domain="[('art_category', '=', 'dance')]"/>
                <filter name="music" string="Music" domain="[('art_category', '=', 'music')]"/>
                <filter name="visual_arts" string="Visual Arts" domain="[('art_category', '=', 'visual_arts')]"/>
                <filter name="theater" string="Theater" domain="[('art_category', '=', 'theater')]"/>
                
                <group>
                    <filter name="group_art_category" string="Art Category" context="{'group_by': 'art_category'}"/>
                    <filter name="group_skill_level" string="Skill Level" context="{'group_by': 'skill_level'}"/>
                    <filter name="group_zone" string="Zone" context="{'group_by': 'zone_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Artist Action -->
    <record id="action_artist" model="ir.actions.act_window">
        <field name="name">Artists</field>
        <field name="res_model">artist.artist</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_artist_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first artist!
            </p>
            <p>
                Register artists, track their performances, and manage their artistic journey.
            </p>
        </field>
    </record>
</odoo>