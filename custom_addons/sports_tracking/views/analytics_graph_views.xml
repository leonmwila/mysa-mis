<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========== PERFORMANCE METRIC GRAPH VIEWS ========== -->
    
    <!-- Performance Metrics Graph View -->
    <record id="view_sports_performance_metric_graph" model="ir.ui.view">
        <field name="name">sports.performance.metric.graph</field>
        <field name="model">sports.performance.metric</field>
        <field name="arch" type="xml">
            <graph string="Performance Metrics Analysis" type="bar" stacked="False">
                <field name="athlete_id" type="row"/>
                <field name="value" type="measure"/>
                <field name="metric_type" type="col"/>
            </graph>
        </field>
    </record>

    <!-- Performance Metrics Line Chart -->
    <record id="view_sports_performance_metric_graph_line" model="ir.ui.view">
        <field name="name">sports.performance.metric.graph.line</field>
        <field name="model">sports.performance.metric</field>
        <field name="arch" type="xml">
            <graph string="Performance Trends" type="line">
                <field name="date" type="row"/>
                <field name="value" type="measure"/>
                <field name="athlete_id" type="col"/>
            </graph>
        </field>
    </record>

    <!-- Performance Metrics Pivot View -->
    <record id="view_sports_performance_metric_pivot" model="ir.ui.view">
        <field name="name">sports.performance.metric.pivot</field>
        <field name="model">sports.performance.metric</field>
        <field name="arch" type="xml">
            <pivot string="Performance Analytics">
                <field name="athlete_id" type="row"/>
                <field name="metric_type" type="col"/>
                <field name="value" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- ========== ACHIEVEMENT GRAPH VIEWS ========== -->
    
    <!-- Achievements Graph View -->
    <record id="view_sports_achievement_graph" model="ir.ui.view">
        <field name="name">sports.achievement.graph</field>
        <field name="model">sports.achievement</field>
        <field name="arch" type="xml">
            <graph string="Achievements by Level" type="pie">
                <field name="competition_level" type="row"/>
            </graph>
        </field>
    </record>

    <!-- Achievements Bar Chart -->
    <record id="view_sports_achievement_graph_bar" model="ir.ui.view">
        <field name="name">sports.achievement.graph.bar</field>
        <field name="model">sports.achievement</field>
        <field name="arch" type="xml">
            <graph string="Achievements by Position" type="bar">
                <field name="position" type="row"/>
                <field name="athlete_id" type="col"/>
            </graph>
        </field>
    </record>

    <!-- Achievements Pivot View -->
    <record id="view_sports_achievement_pivot" model="ir.ui.view">
        <field name="name">sports.achievement.pivot</field>
        <field name="model">sports.achievement</field>
        <field name="arch" type="xml">
            <pivot string="Achievement Statistics">
                <field name="competition_level" type="row"/>
                <field name="position" type="col"/>
                <field name="athlete_id" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- ========== ATHLETE GRAPH VIEWS ========== -->
    
    <!-- Athletes by Gender Graph -->
    <record id="view_sports_athlete_graph_gender" model="ir.ui.view">
        <field name="name">sports.athlete.graph.gender</field>
        <field name="model">sports.athlete</field>
        <field name="arch" type="xml">
            <graph string="Athletes by Gender" type="pie">
                <field name="gender" type="row"/>
            </graph>
        </field>
    </record>

    <!-- Athletes by Age Group -->
    <record id="view_sports_athlete_graph_age" model="ir.ui.view">
        <field name="name">sports.athlete.graph.age</field>
        <field name="model">sports.athlete</field>
        <field name="arch" type="xml">
            <graph string="Athletes by Age Category" type="bar">
                <field name="age_category" type="row"/>
                <field name="zone_id" type="col"/>
            </graph>
        </field>
    </record>

    <!-- Athletes Pivot View -->
    <record id="view_sports_athlete_pivot" model="ir.ui.view">
        <field name="name">sports.athlete.pivot</field>
        <field name="model">sports.athlete</field>
        <field name="arch" type="xml">
            <pivot string="Athlete Statistics">
                <field name="zone_id" type="row"/>
                <field name="gender" type="col"/>
                <field name="age_category" type="col"/>
                <field name="id" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- ========== CALENDAR VIEWS ========== -->
    
    <!-- Performance Metrics Calendar -->
    <record id="view_sports_performance_metric_calendar" model="ir.ui.view">
        <field name="name">sports.performance.metric.calendar</field>
        <field name="model">sports.performance.metric</field>
        <field name="arch" type="xml">
            <calendar string="Performance Calendar" 
                      date_start="date"
                      color="athlete_id"
                      quick_create="True">
                <field name="athlete_id"/>
                <field name="metric_type"/>
                <field name="value"/>
                <field name="unit"/>
            </calendar>
        </field>
    </record>

    <!-- Achievements Calendar -->
    <record id="view_sports_achievement_calendar" model="ir.ui.view">
        <field name="name">sports.achievement.calendar</field>
        <field name="model">sports.achievement</field>
        <field name="arch" type="xml">
            <calendar string="Achievement Calendar" 
                      date_start="date"
                      color="position"
                      quick_create="True">
                <field name="athlete_id"/>
                <field name="competition_name"/>
                <field name="position"/>
                <field name="competition_level"/>
            </calendar>
        </field>
    </record>

    <!-- ========== UPDATED ACTIONS WITH GRAPH VIEWS ========== -->
    
    <!-- Performance Analytics Action -->
    <record id="action_performance_analytics" model="ir.actions.act_window">
        <field name="name">Performance Analytics</field>
        <field name="res_model">sports.performance.metric</field>
        <field name="view_mode">graph,pivot,list,form,calendar</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Start analyzing athlete performance!
            </p>
            <p>
                Track performance trends, analyze improvements, and identify
                top performers across different sports categories.
            </p>
        </field>
    </record>

    <!-- Achievement Analytics Action -->
    <record id="action_achievement_analytics" model="ir.actions.act_window">
        <field name="name">Achievement Analytics</field>
        <field name="res_model">sports.achievement</field>
        <field name="view_mode">graph,pivot,kanban,list,form,calendar</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Track sporting achievements!
            </p>
            <p>
                Analyze medal distributions, competition levels, and
                achievement patterns across athletes and zones.
            </p>
        </field>
    </record>

    <!-- Athlete Analytics Action -->
    <record id="action_athlete_analytics" model="ir.actions.act_window">
        <field name="name">Athlete Analytics</field>
        <field name="res_model">sports.athlete</field>
        <field name="view_mode">graph,pivot,kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Analyze athlete demographics!
            </p>
            <p>
                Review athlete distribution by gender, age, zone, and
                participation patterns for strategic planning.
            </p>
        </field>
    </record>

    <!-- ========== ADDITIONAL MENU ITEMS FOR ANALYTICS ========== -->
    
    <menuitem id="menu_performance_analytics" 
              name="ðŸ“ˆ Performance Analytics" 
              parent="menu_sports_reports" 
              action="action_performance_analytics"
              sequence="40"/>

    <menuitem id="menu_achievement_analytics" 
              name="ðŸ† Achievement Analytics" 
              parent="menu_sports_reports" 
              action="action_achievement_analytics"
              sequence="50"/>

    <menuitem id="menu_athlete_analytics" 
              name="ðŸ‘¥ Athlete Analytics" 
              parent="menu_sports_reports" 
              action="action_athlete_analytics"
              sequence="60"/>
</odoo>