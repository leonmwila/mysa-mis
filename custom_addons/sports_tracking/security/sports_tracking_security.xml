<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sports Management Security Groups -->
        <record id="group_sports_user" model="res.groups">
            <field name="name">Sports User</field>
            <field name="comment">Basic sports module user can view sports data</field>
        </record>

        <record id="group_sports_coach" model="res.groups">
            <field name="name">Sports Coach</field>
            <field name="implied_ids" eval="[(4, ref('group_sports_user'))]"/>
            <field name="comment">Sports coach can manage athletes and record performance metrics</field>
        </record>

        <record id="group_sports_manager" model="res.groups">
            <field name="name">Sports Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_sports_coach'))]"/>
            <field name="comment">Sports manager with full access to sports management features</field>
        </record>

        <!-- Record Rules -->
        <record id="rule_sports_zone_access" model="ir.rule">
            <field name="name">Sports Zone Access</field>
            <field name="model_id" ref="model_sports_zone"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_sports_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_sports_association_access" model="ir.rule">
            <field name="name">Sports Association Access</field>
            <field name="model_id" ref="model_sports_association"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_sports_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_sports_association_manager" model="ir.rule">
            <field name="name">Sports Association Manager Access</field>
            <field name="model_id" ref="model_sports_association"/>
            <field name="groups" eval="[(4, ref('group_sports_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>